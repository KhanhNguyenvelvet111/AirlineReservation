@model IEnumerable<BanVeMayBay.Models.order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layOutAdmin.cshtml";
}
<!-- Content Wrapper. Contains page content -->

<div class="card card-title bg-white p-1">
    <div class="row">
        <div class="col-md-6 "> <h5 class="pl-2 mt-2 text-blues">Manage Ticketing Orders </h5> </div>
        <div class="col-md-6 m-0">
            <ol class="breadcrumb bg-white float-sm-right m-0">
                <li class="breadcrumb-item m-0"><a href="~/Admin">Home</a></li>
                <li class="breadcrumb-item active m-0">Manage Ticketing Orders</li>
            </ol>
        </div>
    </div>
</div>



<section class="">
    <div class=" bg-white card  p-3">
        <div class="row justify-content-end">
            <div class="col-md-3">
                <div class=" pt-1 ml-5">
                    <a class="text-white btn-sm btn-danger " href="~/admin/Orders/trash">Recycle Bin<i class="fas fa-trash"></i></a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9  w-100 ">
                @Html.Partial("_MessgeAlert")
            </div>
            <div class="col-md-12 p-3">

                <table id="myTable1" class="table  table-striped table-bordered dt-responsive nowrap">
              
                    <tbody>
                        @foreach (var item in Model)
                        {

                        <tr>
                            <td class="text-cam">@Html.DisplayFor(modelItem => item.ID)</td>
                            <td>@item.name</td>

                            <td style="font-size:14px;">@Html.DisplayFor(modelItem => item.email)</td>

                            <td>
                                @item.created_ate
                            </td>
                            <td>
                                @if (item.status == 1)
                                {
                                <td class="text-success">Confirmed</td>
                            }
                            else
                            {
                                <td class="text-danger">No Confirmed</td>

                            }

                                </td>
                        <td>
                            @if (item.status == 1)
                            {
                                <a class="btn btn-sm btn-light text-success border a33" href="@Url.Action("Status", "Orders", new { id = item.ID })"> <i class="fas fa-toggle-on"></i> </a>
                            }
                            else
                            {
                                <a class="btn btn-sm btn-light text-danger border a33" href="@Url.Action("Status", "Orders", new { id = item.ID })"> <i class="fas fa-toggle-off"></i> </a>
                            }

                           
                                @if (item.status == 2)
                                {
                                    <a class="btn btn-sm btn-light text-danger border"  href="@Url.Action("Deltrash", "Orders", new { id = item.ID })"> <i class="fas fa-trash-alt"></i></a>
                                }
                              
                            

                            <a class="btn btn-sm btn-light text-warning border" href="@Url.Action("Details", "Orders", new { id = item.ID })">
                                <i class="fas fa-eye"></i>
                            </a>
                        </td>

                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</section>