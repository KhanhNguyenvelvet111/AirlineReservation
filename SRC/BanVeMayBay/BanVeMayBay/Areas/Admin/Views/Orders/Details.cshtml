@model BanVeMayBay.Models.order

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_layOutAdmin.cshtml";
}

<div class="container bg-white">
    <div class="row">
        <div class="col-md-7">
            <h3>Detail Orders</h3>
            <table class="table border">
                <tbody>
                    <tr>
                        <td class="title">Booking ID</td>
                        <td class="b-id">@Model.ID</td>
                    </tr>
                    <tr>
                        <td class="title">Passenger</td>
                        <td>@Model.name </td>
                    </tr>
                    <tr>
                        <td class="title">Email</td>
                        <td>@Model.email</td>
                    </tr>
                    <tr>
                        <td class="title">Phone</td>
                        <td>@Model.phone</td>
                    </tr>
                    <tr>
                        <td class="title">Amount</td>
                        <td>@Model.guestTotal</td>
                    </tr>
                    <tr>
                        <td class="title">Gender</td>
                        <td>@Model.gioitinh</td>
                    </tr>
                    <tr>
                        <td class="title">National</td>
                        <td>@Model.quoctich</td>
                    </tr>
                    <tr>
                        <td class="title">Message</td>
                        <td>@Model.mess</td>
                    </tr>
                    <tr>
                        <td class="title">Create Date</td>
                        <td>@Model.created_ate </td>
                    </tr>
                    <tr>
                        <td class="title">Total:</td>
                        <td><h4 class="text-danger"> @Model.total.ToString("N0") $</h4></td>
                    </tr>
                </tbody>
            </table>

        </div>
        <div class="col-md-5">
            @Html.Action("_BookingConnfig", "Orders", new { orderId = Model.ID })

        </div>
    </div>
</div>
<style>
    .title {
        font-size: 17px;
        font-weight: bold;
        padding-right: 50px;
        color: #ff0000;
    }
</style>