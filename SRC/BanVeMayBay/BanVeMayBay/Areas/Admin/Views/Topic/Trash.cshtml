@model IEnumerable<BanVeMayBay.Models.topic>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content Wrapper. Contains page content -->


    <div class="card card-title bg-white p-1">
        <div class="row">
            <div class="col-md-6 "> <h5 class="pl-2 mt-2 text-blues">Recycle Bin </h5> </div>
            <div class="col-md-6 m-0">
                <ol class="breadcrumb bg-white float-sm-right m-0">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Recycle Bin</li>
                </ol>
            </div>
        </div>
    </div>


    <section class="container-fluid ">
        <div class=" bg-white card  ">
            <div class="row justify-content-end">
                <div class="col-md-3">
                    <div class=" pt-1 ml-5">
                      
                        <a class="text-white btn-sm btn-danger" href="~/admin/Topic">Cancel</a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-9  w-100 ">
                    @Html.Partial("_MessgeAlert")
                </div>
                <div class="col-md-12 p-3">

                    <table class="table px-3 table-striped table-bordered dt-responsive nowrap">
                        <thead>
                            <tr>
                                <th>Topic Name</th>
                                <th>Slug</th>

                                <th>Created Date</th>
                                <th>Function</th>
                                <th>ID</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td><a class=" font-weight-bold card-link " href=""> @Html.DisplayFor(modelItem => item.name)</a></td>
                                    <td> @Html.DisplayFor(modelItem => item.slug)</td>

                                    <td style="font-size:14px;">@Html.DisplayFor(modelItem => item.created_at)</td>
                                    <td>
                                        <a class="btn btn-sm btn-light text-dark border" href="@Url.Action("Retrash", "topic", new { id = item.ID })"> <i class="fas fa-undo"></i></a>
                                        <a class="btn btn-sm btn-light text-danger border" href="@Url.Action("deleteTrash", "topic", new { id = item.ID })">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </td>
                                    <td class="text-cam ">@Html.DisplayFor(modelItem => item.ID)</td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </section>
    <script>
        $("#topic").addClass("active");
    </script>
