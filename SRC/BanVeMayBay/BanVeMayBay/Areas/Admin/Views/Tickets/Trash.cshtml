@model IEnumerable<BanVeMayBay.Models.ticket>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layOutAdmin.cshtml";
}
<!-- Content Wrapper. Contains page content -->

<div class="card card-title bg-white p-1">
    <div class="row">
        <div class="col-md-6 "> <h5 class="pl-2 mt-2 text-blues">Recycle Bin </h5> </div>
        <div class="col-md-6 m-0">
            <ol class="breadcrumb bg-white float-sm-right m-0">
                <li class="breadcrumb-item m-0"><a href="~/Admin">Home</a></li>
                <li class="breadcrumb-item active m-0">Recycle Bin</li>
            </ol>
        </div>
    </div>
</div>



<section class="">
    <div class=" bg-white card  p-3">
        <div class="row justify-content-end">
            <div class="col-md-3">
                <div class=" pt-1 ml-5">

                    <a class="text-white btn-sm btn-danger " href="~/admin/Tickets">CANCEL</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9  w-100 ">
                @Html.Partial("_MessgeAlert")
            </div>
            <div class="col-md-12 p-3">

                <table id="myTable1" class="table  table-striped table-bordered dt-responsive nowrap">
                    <thead>

                        <tr>
                            <th>Airline</th>
                            <th>From</th>
                            <th>To</th>
                            <th>Start Date</th>
                            <th>Price</th>
                            <th>Function</th>
                            <th>Id</th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            string name = item.name;
                            <tr>

                                <td><img style="width:50px;" src="~/public/images/flight/@Html.DisplayFor(modelItem => item.airline)"></td>
                                <td>

                                    @item.city.cityName
                                </td>
                                <td width="15%">  @item.city1.cityName</td>
                                <td style="font-size:14px;">@item.departure_date.Value.ToString("dd/MM/yyyy")</td>
                                <td style="font-size:14px;">@item.price.Value.ToString("N0") $</td>
                                <td>
                                    <a class="btn btn-sm btn-light text-dark border" href="@Url.Action("Retrash", "Tickets", new { id = item.id })"> <i class="fas fa-undo"></i></a>
                                    <a class="btn btn-sm btn-light text-danger border" href="@Url.Action("deleteTrash", "Tickets", new { id = item.id })">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                                <td class="text-cam">@Html.DisplayFor(modelItem => item.id)</td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</section>