                </div>

                <div class="container ">
                    <div class="row">
                        <div class="col-md-10" style="padding-bottom:50px;">

                        </div>

                        <button class="btn-blue btn-red btn-style-1 " type="submit">Next</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</section>

<!-- Destination Ends -->
<script>
    $("#active_@Model.PageNumber").addClass("active");

    function ajaxShowItem(t) {
        console.log(t.value)
    }
