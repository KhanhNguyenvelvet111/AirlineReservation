
@{
    ViewBag.Title = "register";
    Layout = "~/Views/Shared/_layOutSite.cshtml";
}
<section class="">
    <div>
        <form action="" method="post">
            <div class="container bg-light">
                @Html.Partial("_MessgeAlert")
                <div class="row bg-light" @*style="margin-top: 90px;"*@>
                    <div class="form-group col-md-6 col-xs-12" >
                        <div>
                            <label for="email">Username</label>
                            <input class="mb-0 form-control" type="text" placeholder="Username" name="uname" required>
                            <span class="text-danger">@ViewBag.error</span>
                        </div>
                        <div>
                            <label for="fullname">Fullname</label>
                            <input type="text" class="mb-0 form-control" placeholder="Fullname" name="fname" required>
                        </div>
                        <div>
                            <label for="email">Email</label>
                            <input class="mb-0 form-control" type="email" id="email" name="email" placeholder="Email" required>
                        </div>
                        <div>
                            <label for="email">Phone</label>
                            <input class="mb-0 form-control" type="tel" name="phone" placeholder="Phone"  required
           pattern="[0-9]{3}[0-9]{3}[0-9]{4}">
                            <span asp-validation-for="phone" class="text-danger"></span>
                        </div>
                        <div>
                            <label for="email">Address</label>
                            <input class="mb-0 form-control" type="text" name="address" placeholder="Address" required>
                        </div>
                        <div>
                            <label for="password">Password</label>
                            <input class="mb-0 form-control" type="password" name="psw" id="password" placeholder="Password" required>
                        </div>
                        <div>
                            <label for="password">Re-Enter Password</label>
                            <input class="mb-0 form-control" type="password" id="repeat-password" name="repsw" placeholder="Re-Enter Password" required>
                        </div>

                        <span class="text-danger">@ViewBag.error</span>
                        <button style="margin-top:20px;" class="btn-blue btn-red btn-style-1 pt-2" type="submit">Register</button>
                    </div>
                    <div class="col-md-6">
                        <div>
                            <img style="width: 100%;height: 500px" class="d-block img-fluid imgregister" onerror="this.style.display='none'" src="~/Public/images/flight/register1.jpg"  />

                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</section>
